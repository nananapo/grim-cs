__assign(:=; opm 0(name value) __assign(name; value) end)

:// = opp 0(comment) end; // "前置演算子の定義の時は;を忘れずに！ 後ろの名前型が巻き込まれます！"
:+  = opm -5(va1 va2) __add(va1; va2) end
:-  = opm -5(va1 va2) va1 + __negate(va2) end
:== = opm 1(va1 va2) __equal(va1; va2) end
:!= = opm 1(va1 va2) !(va1 == va2) end
:!  = opp 6(va) 0 == va end;

// "関数"
:print = fun(text) __put(text + "\n") end
:if = __if
:while = __while